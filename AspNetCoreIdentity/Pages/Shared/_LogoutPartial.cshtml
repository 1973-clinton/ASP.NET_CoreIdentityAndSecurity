
@if (User.Identity.IsAuthenticated)
{
    <form class="form-inline" method="post" asp-page="/Account/Logout">
        Welcome @User.Identity.Name (@User.Claims.First(x => x.Type == "Position"))
        <button type="submit" class="ml-2 btn btn-link">Logout</button>
    </form>
}
else
{
    <a class="btn btn-link" asp-page="/Account/Login">Login</a>
}

