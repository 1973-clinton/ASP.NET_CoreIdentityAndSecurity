@page
@model AspNetCoreIdentity.Pages.Account.LoginModel
@{
}

<p>
    <h3>User Login</h3>
</p>
<div class="container" border style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CredentialVm.Email"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="CredentialVm.Email" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="CredentialVm.Email"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CredentialVm.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="CredentialVm.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="CredentialVm.Password"></span>
        </div>
        <div class="row form-check mb-2">
            <div class="col-2">
                <input type="checkbox" asp-for="CredentialVm.RememberMe" class="form-check-input" />
                <label class="form-check-label" asp-for="CredentialVm.RememberMe"></label>
            </div>
            <div class="col">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <div class="col">
                <a class="btn btn-link" href="/Account/Register">Sign Up</a>
            </div>
        </div>
    </form>
</div>